<!DOCTYPE html>
<html lang="en">

<head>
  <title>Quiz App</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
  <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
  <link rel="stylesheet" href="/styles/layout.css" type="text/css" />

  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
  <script type="text/javascript" src="/scripts/app.js"></script>
  <script type="text/javascript" src="/scripts/quiz-form.js"></script>
</head>

<body>
  <%- include('partials/_nav'); %>
    <main class="main-body px-3">
      <section class="home-header d-flex p-4 row justify-content-center">
        <form id="quiz-form" class="row col-lg-8" action="/quizes" method="POST">
          <div class="col-md-12">
            <h3 class="text-center">Add a new quiz</h4>
          </div>
          <div class="col-md-12">
            <label for="quizTitle">Quiz Title</label>
            <input type="text" class="form-control" id="quizTitle" name="title" placeholder="Quiz Title" required>
          </div>
          <div class="col-12">
            <label for="imageUrl">Image Url</label>
            <input type="url" class="form-control" id="imageUrl" name="image_url" placeholder="https://example.com" required>
          </div>
          <div class="col-md-8">
            <label for="category">Category</label>
            <select id="category" class="form-select" name="category_id" aria-label="Choose Category" required>
              <option value="" disabled selected hidden>select category</option>
              <% for(let category of categories) {%>
                <option value="<%= category.id %> ">
                  <%= category.type %>
                </option>
                <%} %>
            </select>
          </div>
          <div class="col-md-4">
            <label for="questionCount">No of Questions?</label>
            <input type="number" id='questionCount' class="form-control" min="5" max="15" placeholder="No of Questions?" value="5">
          </div>
          <fieldset id="questions-container" class="row border-0 pb-0">
          </fieldset>
          <div class="col-12">
            <div class="form-check">
              <label class="form-check-label" for="isPrivate"></label>
              <input class="form-check-input" name= "public" type="checkbox" id="isPrivate">
                Make It Private?
              </label>
            </div>
          </div>
          <div class="col-12">
            <input type="submit" class="btn btn-primary btn-lg"></input>
          </div>
        </form>
      </section>
    </main>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"
      integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
      crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"
      integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
      crossorigin="anonymous"></script>
      <%- include('partials/_footer'); %>
</body>

</html>
