          <button class="popular btn btn-primary w-15 mx-1">POPULAR</button>
          <button class="latest btn btn-warning w-15 mx-1">LATEST</button>
        </div>
      </div>
    </section>

    <main class="quizes-container d-flex flex-column flex-md-row flex-wrap justify-content-between">
