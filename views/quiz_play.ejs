<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Quizes - LightQuiz</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
  <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
  <link rel="stylesheet" href="/styles/layout.css" type="text/css" />

  <script src="/vendor/jquery-3.6.0.min.js"></script>
  <script src="/scripts/quizes.js"></script>
</head>

<body>
  <%- include('partials/_nav'); %>
  <h3 id="quiz-title" class="display-6"><%=data[0].title%></h3>
  <h3 id="quiz-owner" class="w-100">Created by: <%=data[0].name%></h3>
  <form class="quiz-display" action="/quizes/result"  method="POST">
  <% for (question of data) { %>
    <fieldset class="quiz-question">
    <legend><%= question.question %></legend>
    <% let choices = [question.choice_a, question.choice_b, question.choice_c, question.choice_d].sort(()=> Math.random() - 0.5) %>
      <input type="radio" name='<%=question.question_id%>' id="opt1" value="<%= choices[0] %>" required> <%= choices[0] %>
      <br>
      <input type="radio" name='<%=question.question_id%>' id="opt2" value="<%= choices[1] %>" required> <%= choices[1] %>
      <br>
      <input type="radio" name='<%=question.question_id%>' id="opt3" value="<%= choices[2] %>" required> <%= choices[2] %>
      <br>
      <input type="radio" name='<%=question.question_id%>' id="opt4" value="<%= choices[3] %>" required> <%= choices[3] %>
      <br>
    </fieldset>
    <% } %>
      <br>
      <button id="quiz-play-submit" class="btn btn-secondary" type="submit" >Submit</button>
    </form>
    <br>
    <%- include('partials/_footer'); %>
</body>
</html>
