<body>
  <%- include('partials/_nav'); %>
    <header class="main-body px-3">
      <section class="home-header row p-4 d-flex justify-content-between">
        <div class=" bg-light col-md-8 jumbotron pt-3">
          <h2 class="display-4 text-center">Hello, world!</h2>
